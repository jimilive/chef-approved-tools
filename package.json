{
  "name": "chefapprovedtools",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "validate": "node scripts/validate-site-integrity.mjs",
    "validate:db": "node scripts/validate-database-integrity.mjs",
    "validate:images": "node scripts/validate-images.mjs",
    "validate:links": "node scripts/validate-affiliate-links.mjs",
    "validate:duplicates": "node scripts/validate-duplicate-links.mjs",
    "validate:all": "node scripts/validate-all.mjs",
    "prebuild": "npm run validate",
    "analyze": "ANALYZE=true npm run build",
    "lighthouse": "lhci autorun",
    "optimize": "npm run build && npm run lighthouse",
    "deploy:netlify": "netlify deploy --prod --dir=.next",
    "preview": "npm run build && npm start",
    "review-audit": "node scripts/review-tools/review-audit.js",
    "review-fix": "node scripts/review-tools/review-fix.js",
    "review-quick-fix": "node scripts/review-tools/review-quick-fix.js",
    "review-add-sections": "node scripts/review-tools/review-add-sections.js",
    "review-validate": "node scripts/review-tools/review-validate.js",
    "batch-audit": "node scripts/review-tools/batch-audit.js",
    "testimonial-gen": "node scripts/review-tools/testimonial-gen.js",
    "specs-finder": "node scripts/review-tools/specs-finder.js",
    "compaction-log": "scripts/track-claude-compactions.sh log",
    "compaction-check": "scripts/track-claude-compactions.sh check",
    "compaction-report": "python3 scripts/claude-compaction-report.py",
    "optimize:critical": "node scripts/optimize-images.js critical",
    "optimize:all": "node scripts/optimize-images.js all",
    "optimize:replace": "node scripts/replace-optimized.js",
    "backup:images": "tar -czf images-backup-$(date +%Y%m%d-%H%M%S).tar.gz public/images",
    "cleanup:backups": "find public/images -name '*.backup' -delete",
    "indexnow": "tsx scripts/submit-indexnow.ts",
    "validate:types": "npm run type-check",
    "validate:metadata": "node scripts/validate-metadata.mjs",
    "validate:content": "node scripts/validate-content.js",
    "validate:new-images": "node scripts/validate-images.js",
    "validate:schema": "tsx scripts/validate-schema.ts",
    "validate:schema:local": "tsx scripts/validate-schema.ts --local",
    "validate:schema:live": "tsx scripts/validate-schema.ts --live",
    "validate:schema:report": "tsx scripts/validate-schema.ts --report schema-validation-report.txt",
    "validate:phase1": "npm run validate:types && npm run validate:metadata && npm run validate:content && npm run validate:new-images && npm run validate:schema"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.8",
    "@heroicons/react": "^2.2.0",
    "@supabase/supabase-js": "^2.76.1",
    "@vercel/analytics": "^1.5.0",
    "@vercel/og": "^0.8.5",
    "cloudinary": "^2.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.0.0",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.542.0",
    "next": "^14.2.32",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "resend": "^6.5.0"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "20.14.10",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "autoprefixer": "^10.4.20",
    "critters": "^0.0.23",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "glob": "^11.0.3",
    "html-validator-cli": "^2.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.8.2",
    "linkinator": "^6.1.4",
    "postcss": "^8.4.35",
    "sharp": "^0.34.4",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "5.4.5"
  }
}
